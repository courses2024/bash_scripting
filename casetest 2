case "$1" in
    -i) echo "Interaktiver Modus" ;;
    -s) echo "Stiller Modus" ;;
    -v | -V | v | V) echo "Geschw√§tziger Modus" 
        echo blablabl
        echo blablablaa
        ;;
     *) echo "Unbekannte Option"
        exit 1 ;;
esac
exit 0;
